{
    "name": "robusta",
    "displayName": "robusta",
    "description": "Full robusta language support for vscode (Code colorization, formatting, code execution, theme ...).",
    "author": {
        "name": "MECHERI Akram"
    },
    "publisher": "meshredded",
    "icon": "icons/128.png",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Meshredded/vscode-robusta.git"
    },
    "homepage": "https://github.com/Meshredded/vscode-robusta/blob/master/README.md",
    "badges": [
        {
            "description": "circleci",
            "href": "https://circleci.com/gh/Meshredded/vscode-robusta/tree/master",
            "url": "https://circleci.com/gh/Meshredded/vscode-robusta/tree/master.svg?style=svg"
        },
        {
            "description": "frapsoft",
            "href": "https://github.com/ellerbrock/open-source-badges/",
            "url": "https://badges.frapsoft.com/os/v1/open-source.svg?v=103"
        },
        {
            "description": "shields",
            "href": "https://opensource.org/licenses/MIT",
            "url": "https://img.shields.io/badge/License-MIT-green.svg"
        }
    ],
    "bugs": {
        "url": "https://github.com/Meshredded/vscode-robusta/issues",
        "email": "mecheri.akram@gmail.com"
    },
    "version": "2.0.3",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Themes",
        "Debuggers",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:jvs"
    ],
    "main": "./dist/extension",
    "contributes": {
        "languages": [
            {
                "id": "jvs",
                "aliases": [
                    "robusta",
                    "jvs"
                ],
                "extensions": [
                    ".jvs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "jvs",
                "scopeName": "robusta",
                "path": "./syntaxes/jvs.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "jvs",
                "path": "./snippets/robusta.json"
            }
        ],
        "commands": [
            {
                "command": "robusta.compile",
                "title": "robusta: Compile this file"
            },
            {
                "command": "robusta.runJar",
                "title": "robusta: Run this jar file"
            }
        ],
        "problemMatchers": [
            {
                "name": "jvscompile",
                "owner": "jvscompile",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+),(\\d+): (error|warning|info):((.|\n)*)",
                        "kind": "location",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5,
                        "loop": true
                    }
                ]
            }
        ],
        "taskDefinitions": [
            {
                "type": "jvscompile"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == jvs",
                    "command": "robusta.compile",
                    "group": "navigation"
                },
                {
                    "when": "resourceExtname == .jar",
                    "command": "robusta.runJar",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceLangId == jvs",
                    "command": "robusta.compile",
                    "group": "navigation"
                },
                {
                    "when": "resourceExtname == .jar",
                    "command": "robusta.runJar",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Robusta",
            "properties": {
                "robusta.path": {
                    "type": "string",
                    "markdownDescription": "Full path to the [robusta.jar](https://github.com/Meshredded/robusta#2---download-robustajar-) file."
                },
                "robusta.jdkHomePath": {
                    "type": "string",
                    "markdownDescription": "Full path to the jdk home folder file. (jdk 8 or greater)."
                },
                "robusta.formatOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Format the current document on save."
                },
                "robusta.compileOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Compile the current document on save."
                }
            }
        },
        "iconThemes": [
            {
                "id": "robusta-theme",
                "label": "Robusta Icon Theme",
                "path": "./icons/vs-seti-icon-theme.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "",
        "@types/vscode": "^1.32.0",
        "typescript": "^3.7.2",
        "ts-loader": "^6.2.1",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch"
    }
}
